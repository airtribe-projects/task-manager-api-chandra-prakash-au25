{
    "info": {
        "_postman_id": "task-manager-api",
        "name": "Task Manager API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"New Task\",\n    \"description\": \"Task description\",\n    \"priority\": \"medium\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/tasks",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Tasks",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/tasks?completed=false&sortBy=createdAt:desc",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "completed",
                                    "value": "false"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "createdAt:desc"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Task by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/tasks/{{task_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks",
                                "{{task_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Task",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"completed\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/tasks/{{task_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks",
                                "{{task_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/tasks/{{task_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks",
                                "{{task_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Tasks by Priority",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/tasks/priority/medium",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "tasks",
                                "priority",
                                "medium"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000"
        },
        {
            "key": "token",
            "value": "your_jwt_token_here"
        },
        {
            "key": "task_id",
            "value": "your_task_id_here"
        }
    ]
}